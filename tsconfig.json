{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "outDir": "./build/",
    "rootDir": "src",
    "baseUrl": "src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "paths": {
      "*.ts": ["*"]
    }
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
